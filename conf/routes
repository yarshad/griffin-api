# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page


GET /quotes/:symbol                       controllers.YahooController.getQuote(symbol)
GET /options/:symbol/:expiration          controllers.YahooController.getOptionsByExpiration(symbol,expiration : Long)
GET /tradier/:symbol                      controllers.TradierController.tradier(symbol)
GET /optionchain/:symbol                  controllers.TradierController.optionChain(symbol)
GET /expirations/:symbol                  controllers.TradierController.expirations(symbol)

